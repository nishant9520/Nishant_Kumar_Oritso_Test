
@model Models.TaskViewModel

@{
    ViewBag.Title = "Home Page";
}

<main>
    <div class="row">
        <div class="container mt-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create New Task</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="col-md-4">
                                @Html.LabelFor(m => m.TaskTitle, "Task Title", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(m => m.TaskTitle, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter task title" } })
                                @Html.ValidationMessageFor(m => m.TaskTitle, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(m => m.TaskDescription, "Description", new { @class = "form-label fw-bold" })
                                @Html.TextAreaFor(m => m.TaskDescription, new { @class = "form-control", rows = "3", placeholder = "Describe the task..." })
                                @Html.ValidationMessageFor(m => m.TaskDescription, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(m => m.TaskDueDate, "Due Date", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(m => m.TaskDueDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                @Html.ValidationMessageFor(m => m.TaskDueDate, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(m => m.TaskStatus, "Status", new { @class = "form-label fw-bold" })
                                @Html.DropDownListFor(m => m.TaskStatus, new SelectList(new[] { "Pending", "In Progress", "Completed" }), "-- Select Status --", new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.TaskStatus, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">
                                @Html.LabelFor(m => m.TaskRemarks, "Remarks", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(m => m.TaskRemarks, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.TaskRemarks, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-success px-4">
                                    <i class="bi bi-save"></i> Save Task
                                </button>
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary ms-2" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="container mt-5">
            @*  list *@
            @Html.Action("GetTaskList", "Home")
        </div>
    </div>
</main>


